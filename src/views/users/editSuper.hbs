{{>sidebar}}

<div id="content" class="">
    {{>navigation}}
    {{>message}}

    <div class="menu_info container mt-5">
        <div class="row">
            <div class="col-md-6 col-xl-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Editar supervisor</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/supervisor/edit/{{user.id_user}}" method="POST">

                            <div class="form-group">
                                <input type="type" name="user" placeholder="Usuario" value="{{user.user}}"
                                    class="form-control" autofocus>
                            </div>

                            <div class="form-group">
                                <input type="text" name="fullname" placeholder="fullname" value="{{user.fullname}}"
                                    class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="type" name="email" placeholder="Email" value="{{user.email}}"
                                    class="form-control" autofocus>
                            </div>

                            <div class="form-group">
                                <select name="fk_rol" value="{{user.role}}" class="form-control">
                                    <option value="3">supervisor</option>
                                    <option value="1">user</option>
                                    <option value="2">admin</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-oxford btn-block">
                                    Guardar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/index.js"></script>
</div>